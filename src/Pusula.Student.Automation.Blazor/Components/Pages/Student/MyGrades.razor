@page "/student/my-grades"

@using Pusula.Student.Automation.Permissions
@attribute [Authorize(AutomationPermissions.Grades.Default)]

@using Volo.Abp.Application.Dtos
@using Pusula.Student.Automation.Grades
@using Pusula.Student.Automation.Enrollments
@using Pusula.Student.Automation.Courses
@inject IGradeAppService GradesApp
@inject IEnrollmentAppService EnrollmentsApp
@inject ICourseAppService CoursesApp

<h3 class="mb-3">Notlarım</h3>

@if (!string.IsNullOrWhiteSpace(_error))
{
    <div class="alert alert-danger">@_error</div>
}

@if (_loading)
{
    <p>Yükleniyor...</p>
}
else if (_rows.Count == 0)
{
    <div class="alert alert-info">Henüz notlanmış dersiniz bulunmuyor.</div>
}
else
{
    <table class="table table-striped align-middle">
        <thead>
            <tr>
                <th>Ders</th>
                <th style="width:140px;">Not</th>
                <th>Açıklama</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var r in _rows)
            {
                <tr>
                    <td>@r.CourseName</td>
                    <td>@r.Score</td>
                    <td>@r.Note</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private bool _loading;
    private string _error = string.Empty;
    private List<MyGradeVm> _rows = new();

    protected override async Task OnInitializedAsync()
    {
        await LoadAsync();
    }

    private async Task LoadAsync()
    {
        try
        {
            _loading = true;
            _error = string.Empty;

            // öğrenci rolünde bu zaten sadece kendisininkini dönecek
            var grades = await GradesApp.GetListAsync(new PagedAndSortedResultRequestDto
            {
                MaxResultCount = 1000
            });

            // ders adlarını göstermek için enrollments + courses alıyoruz
            var enrollments = await EnrollmentsApp.GetListAsync(new PagedAndSortedResultRequestDto
            {
                MaxResultCount = 1000
            });

            var courses = await CoursesApp.GetListAsync(new PagedAndSortedResultRequestDto
            {
                MaxResultCount = 1000
            });

            var enrollmentDict = enrollments.Items.ToDictionary(e => e.Id, e => e);
            var courseDict = courses.Items.ToDictionary(c => c.Id, c => c);

            _rows = grades.Items.Select(g =>
            {
                enrollmentDict.TryGetValue(g.EnrollmentId, out var e);
                string courseName = "—";
                if (e != null && courseDict.TryGetValue(e.CourseId, out var c))
                    courseName = $"{c.Code} - {c.Name}";

                return new MyGradeVm
                {
                    CourseName = courseName,
                    Score = g.Score,
                    Note = g.Note
                };
            }).OrderBy(x => x.CourseName).ToList();
        }
        catch (Exception ex)
        {
            _error = ex.Message;
        }
        finally
        {
            _loading = false;
        }
    }

    private class MyGradeVm
    {
        public string CourseName { get; set; } = string.Empty;
        public int Score { get; set; }
        public string? Note { get; set; }
    }
}
