@page "/student/my-grades"
@using Pusula.Student.Automation.Permissions
@attribute [Authorize(AutomationPermissions.Grades.Default)]

@using Microsoft.AspNetCore.Authorization
@using Pusula.Student.Automation.Courses
@using Pusula.Student.Automation.Enrollments
@using Pusula.Student.Automation.Grades
@using Pusula.Student.Automation.Students
@using Volo.Abp.Application.Dtos

@inject IGradeAppService GradesApp
@inject IEnrollmentAppService EnrollmentsApp
@inject ICourseAppService CoursesApp
@inject IStudentAppService StudentsApp
@inject IAuthorizationService AuthorizationService

<h3 class="mb-3">Notlarım</h3>

@if (!string.IsNullOrWhiteSpace(_error))
{
    <div class="alert alert-danger">@_error</div>
}

@if (_loading)
{
    <p>Yükleniyor…</p>
}
else if (_rows.Count == 0)
{
    <div class="alert alert-info">Henüz notunuz yok.</div>
}
else
{
    <table class="table table-striped align-middle">
        <thead>
            <tr>
                <th style="width: 260px;">Ders</th>
                <th style="width: 220px;">Öğrenci</th>
                <th style="width: 120px;">Not</th>
                <th>Açıklama</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var r in _rows)
            {
                <tr>
                    <td>@r.CourseLabel</td>
                    <td>@r.StudentName</td>
                    <td>@r.Score</td>
                    <td>@r.Note</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private bool _loading = true;
    private string _error = string.Empty;

    private List<CourseDto> _courses = new();
    private List<StudentDto> _students = new();
    private List<EnrollmentDto> _enrollments = new();

    private readonly List<RowVm> _rows = new();

    protected override async Task OnInitializedAsync()
    {
        try
        {
            _loading = true;

            // Kurslar
            var cList = await CoursesApp.GetListAsync(new PagedAndSortedResultRequestDto
            {
                MaxResultCount = 1000,
                Sorting = nameof(CourseDto.Code) + " ASC"
            });
            _courses = cList.Items.ToList();

            // Öğrenciler (tek öğrenci olmalı ama güvenli tarafta kalalım)
            var sList = await StudentsApp.GetListAsync(new PagedAndSortedResultRequestDto
            {
                MaxResultCount = 1000,
                Sorting = nameof(StudentDto.FirstName) + " ASC"
            });
            _students = sList.Items.ToList();

            // Kayıtlar
            var eList = await EnrollmentsApp.GetListAsync(new PagedAndSortedResultRequestDto
            {
                MaxResultCount = 1000
            });
            _enrollments = eList.Items.ToList();

            // Notlar (backend student için sadece kendi notlarını döndürüyor)
            var gList = await GradesApp.GetListAsync(new PagedAndSortedResultRequestDto
            {
                MaxResultCount = 1000
            });

            _rows.Clear();
            foreach (var g in gList.Items)
            {
                var enroll = _enrollments.FirstOrDefault(e => e.Id == g.EnrollmentId);
                if (enroll == null) continue;

                var course = _courses.FirstOrDefault(c => c.Id == enroll.CourseId);
                var student = _students.FirstOrDefault(s => s.Id == enroll.StudentId);

                _rows.Add(new RowVm
                {
                    CourseLabel = course is null ? "—" : $"{course.Code} - {course.Name}",
                    StudentName = student is null ? "—" : $"{student.FirstName} {student.LastName}" +
                                  (string.IsNullOrWhiteSpace(student.StudentNo) ? "" : $" [{student.StudentNo}]"),
                    Score = g.Score,
                    Note = g.Note
                });
            }

            // Görsel tutarlılık için sıralayalım
            _rows.Sort((a, b) => string.Compare(a.CourseLabel, b.CourseLabel, StringComparison.Ordinal));
        }
        catch (Exception ex)
        {
            _error = ex.Message;
        }
        finally
        {
            _loading = false;
        }
    }

    private sealed class RowVm
    {
        public string CourseLabel { get; set; } = "";
        public string StudentName { get; set; } = "";
        public int Score { get; set; }
        public string? Note { get; set; }
    }
}
