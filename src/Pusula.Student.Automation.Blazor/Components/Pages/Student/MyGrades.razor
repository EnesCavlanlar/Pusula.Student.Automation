@page "/student/my-grades"
@using Pusula.Student.Automation.Permissions
@attribute [Authorize(AutomationPermissions.Grades.Default)]

@using Microsoft.AspNetCore.Authorization
@using Pusula.Student.Automation.Grades
@using Pusula.Student.Automation.Grades.Dtos
@using Pusula.Student.Automation.Courses
@using Pusula.Student.Automation.Enrollments
@using Volo.Abp.Application.Dtos

@inject IGradeAppService GradesApp
@inject ICourseAppService CoursesApp
@inject IEnrollmentAppService EnrollmentsApp

<h3 class="mb-3">My Grades</h3>

@if (!string.IsNullOrWhiteSpace(_error))
{
    <div class="alert alert-danger">@_error</div>
}

@if (_loading)
{
    <p>Loading...</p>
}
else if (_rows.Count == 0)
{
    <div class="alert alert-info">No grades yet.</div>
}
else
{
    <table class="table table-striped align-middle">
        <thead>
            <tr>
                <th style="width: 240px;">Course</th>
                <th style="width: 90px;">Score</th>
                <th>Note</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var r in _rows)
            {
                <tr>
                    <td>@CourseLabel(r.CourseId)</td>
                    <td>@r.Score</td>
                    <td>@r.Note</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private bool _loading = true;
    private string _error = string.Empty;

    private List<CourseDto> _courses = new();
    private List<EnrollmentDto> _enrollments = new();
    private List<RowVm> _rows = new();

    protected override async Task OnInitializedAsync()
    {
        try
        {
            _loading = true;

            // 1) kursları çek
            var courseList = await CoursesApp.GetListAsync(new PagedAndSortedResultRequestDto
            {
                MaxResultCount = 1000
            });
            _courses = courseList.Items.ToList();

            // 2) enrollments (kurs-id'yi buradan alacağız)
            var enrollList = await EnrollmentsApp.GetListAsync(new PagedAndSortedResultRequestDto
            {
                MaxResultCount = 1000
            });
            _enrollments = enrollList.Items.ToList();

            // 3) notlar
            var gradeList = await GradesApp.GetListAsync(new PagedAndSortedResultRequestDto
            {
                MaxResultCount = 1000
            });

            _rows = gradeList.Items
                .Select(g =>
                {
                    var enr = _enrollments.FirstOrDefault(e => e.Id == g.EnrollmentId);
                    return new RowVm
                    {
                        CourseId = enr?.CourseId ?? Guid.Empty,
                        Score = g.Score,   // DTO'da Score dedik
                        Note = g.Note
                    };
                })
                .OrderBy(r => CourseLabel(r.CourseId))
                .ToList();
        }
        catch (Exception ex)
        {
            _error = ex.Message;
        }
        finally
        {
            _loading = false;
        }
    }

    private string CourseLabel(Guid courseId)
    {
        if (courseId == Guid.Empty)
            return "—";

        var c = _courses.FirstOrDefault(x => x.Id == courseId);
        return c is null ? "—" : $"{c.Code} - {c.Name}";
    }

    private class RowVm
    {
        public Guid CourseId { get; set; }
        public int Score { get; set; }
        public string? Note { get; set; }
    }
}
