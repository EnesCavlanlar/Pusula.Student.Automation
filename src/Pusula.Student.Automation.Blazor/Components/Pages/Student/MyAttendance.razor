@page "/student/my-attendance"
@using Pusula.Student.Automation.Permissions
@attribute [Authorize(AutomationPermissions.Attendances.Default)]

@using Microsoft.AspNetCore.Authorization
@using Pusula.Student.Automation.Courses
@using Pusula.Student.Automation.Enrollments
@using Pusula.Student.Automation.Attendances
@using Pusula.Student.Automation.Students
@using Volo.Abp.Application.Dtos

@inject IAttendanceAppService AttendanceApp
@inject IEnrollmentAppService EnrollmentsApp
@inject ICourseAppService CoursesApp
@inject IStudentAppService StudentsApp
@inject IAuthorizationService AuthorizationService

<h3 class="mb-3">Yoklamalarım</h3>

@if (!string.IsNullOrWhiteSpace(_error))
{
    <div class="alert alert-danger">@_error</div>
}

@if (_loading)
{
    <p>Yükleniyor…</p>
}
else if (_rows.Count == 0)
{
    <div class="alert alert-info">Henüz yoklama kaydınız yok.</div>
}
else
{
    <table class="table table-striped align-middle">
        <thead>
            <tr>
                <th style="width: 240px;">Ders</th>
                <th style="width: 230px;">Öğrenci</th>
                <th style="width: 140px;">Tarih</th>
                <th style="width: 120px;">Durum</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var r in _rows)
            {
                <tr>
                    <td>@r.CourseLabel</td>
                    <td>@r.StudentName</td>
                    <td>@r.Date.ToString("dd.MM.yyyy")</td>
                    <td>
                        @if (r.IsPresent)
                        {
                            <span class="badge bg-success">Katıldı</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Katılmadı</span>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private bool _loading = true;
    private string _error = string.Empty;

    private List<CourseDto> _courses = new();
    private List<StudentDto> _students = new();
    private List<EnrollmentDto> _enrollments = new();

    private readonly List<RowVm> _rows = new();

    protected override async Task OnInitializedAsync()
    {
        try
        {
            _loading = true;

            // 1) Dersler
            var cList = await CoursesApp.GetListAsync(new PagedAndSortedResultRequestDto
            {
                MaxResultCount = 1000,
                Sorting = nameof(CourseDto.Code) + " ASC"
            });
            _courses = cList.Items.ToList();

            // 2) Öğrenciler (içinden sadece bu kullanıcının mapping’ini kullanacağız)
            var sList = await StudentsApp.GetListAsync(new PagedAndSortedResultRequestDto
            {
                MaxResultCount = 1000,
                Sorting = nameof(StudentDto.FirstName) + " ASC"
            });
            _students = sList.Items.ToList();

            // 3) Enrollments
            var eList = await EnrollmentsApp.GetListAsync(new PagedAndSortedResultRequestDto
            {
                MaxResultCount = 1000
            });
            _enrollments = eList.Items.ToList();

            // 4) Yoklamalar (backend zaten "sadece bu öğrenci" diye filtreliyor)
            var aList = await AttendanceApp.GetListAsync(new PagedAndSortedResultRequestDto
            {
                MaxResultCount = 1000,
                Sorting = "Date DESC"
            });

            _rows.Clear();

            foreach (var a in aList.Items.OrderByDescending(x => x.Date))
            {
                var enroll = _enrollments.FirstOrDefault(e => e.Id == a.EnrollmentId);
                if (enroll == null) continue;

                var course = _courses.FirstOrDefault(c => c.Id == enroll.CourseId);
                var student = _students.FirstOrDefault(s => s.Id == enroll.StudentId);

                var studentName = student is null
                    ? "—"
                    : $"{student.FirstName} {student.LastName}" +
                      (string.IsNullOrWhiteSpace(student.StudentNo) ? "" : $" [{student.StudentNo}]");

                _rows.Add(new RowVm
                {
                    CourseLabel = course is null ? "—" : $"{course.Code} - {course.Name}",
                    StudentName = studentName,
                    Date = a.Date,
                    IsPresent = a.IsPresent
                });
            }
        }
        catch (Exception ex)
        {
            _error = ex.Message;
        }
        finally
        {
            _loading = false;
        }
    }

    private sealed class RowVm
    {
        public string CourseLabel { get; set; } = "";
        public string StudentName { get; set; } = "";
        public DateTime Date { get; set; }
        public bool IsPresent { get; set; }
    }
}
