@page "/student/my-attendance"

@using Pusula.Student.Automation.Permissions
@attribute [Authorize(AutomationPermissions.Attendances.Default)]

@using Volo.Abp.Application.Dtos
@using Pusula.Student.Automation.Attendances
@using Pusula.Student.Automation.Enrollments
@using Pusula.Student.Automation.Courses
@inject IAttendanceAppService AttendanceApp
@inject IEnrollmentAppService EnrollmentsApp
@inject ICourseAppService CoursesApp

<h3 class="mb-3">Yoklamalarım</h3>

@if (!string.IsNullOrWhiteSpace(_error))
{
    <div class="alert alert-danger">@_error</div>
}

@if (_loading)
{
    <p>Yükleniyor...</p>
}
else if (_rows.Count == 0)
{
    <div class="alert alert-info">Yoklama kaydınız bulunmuyor.</div>
}
else
{
    <table class="table table-striped align-middle">
        <thead>
            <tr>
                <th style="width:220px;">Ders</th>
                <th style="width:150px;">Tarih</th>
                <th>Durum</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var r in _rows)
            {
                <tr>
                    <td>@r.CourseName</td>
                    <td>@r.Date.ToString("dd.MM.yyyy")</td>
                    <td>
                        @if (r.IsPresent)
                        {
                            <span class="badge bg-success">Katıldı</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Katılmadı</span>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private bool _loading;
    private string _error = string.Empty;
    private List<MyAttendanceVm> _rows = new();

    protected override async Task OnInitializedAsync()
    {
        await LoadAsync();
    }

    private async Task LoadAsync()
    {
        try
        {
            _loading = true;
            _error = string.Empty;

            // öğrenci rolünde sadece kendisininkini dönecek
            var attendances = await AttendanceApp.GetListAsync(new PagedAndSortedResultRequestDto
            {
                MaxResultCount = 1000,
                Sorting = "Date DESC"
            });

            var enrollments = await EnrollmentsApp.GetListAsync(new PagedAndSortedResultRequestDto
            {
                MaxResultCount = 1000
            });

            var courses = await CoursesApp.GetListAsync(new PagedAndSortedResultRequestDto
            {
                MaxResultCount = 1000
            });

            var enrollmentDict = enrollments.Items.ToDictionary(e => e.Id, e => e);
            var courseDict = courses.Items.ToDictionary(c => c.Id, c => c);

            _rows = attendances.Items.Select(a =>
            {
                enrollmentDict.TryGetValue(a.EnrollmentId, out var e);
                string courseName = "—";
                if (e != null && courseDict.TryGetValue(e.CourseId, out var c))
                    courseName = $"{c.Code} - {c.Name}";

                return new MyAttendanceVm
                {
                    CourseName = courseName,
                    Date = a.Date,
                    IsPresent = a.IsPresent
                };
            })
            .OrderByDescending(x => x.Date)
            .ThenBy(x => x.CourseName)
            .ToList();
        }
        catch (Exception ex)
        {
            _error = ex.Message;
        }
        finally
        {
            _loading = false;
        }
    }

    private class MyAttendanceVm
    {
        public string CourseName { get; set; } = string.Empty;
        public DateTime Date { get; set; }
        public bool IsPresent { get; set; }
    }
}
