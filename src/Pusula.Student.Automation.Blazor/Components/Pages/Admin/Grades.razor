@page "/admin/grades"
@using Pusula.Student.Automation.Permissions
@attribute [Authorize(AutomationPermissions.Grades.Default)]

@using Microsoft.AspNetCore.Authorization
@using Pusula.Student.Automation.Courses
@using Pusula.Student.Automation.Enrollments
@using Pusula.Student.Automation.Students
@using Pusula.Student.Automation.Grades
@using Pusula.Student.Automation.Grades.Dtos
@using Volo.Abp.Application.Dtos

@inject ICourseAppService CoursesApp
@inject IEnrollmentAppService EnrollmentsApp
@inject IStudentAppService StudentsApp
@inject IGradeAppService GradesApp
@inject IAuthorizationService AuthorizationService

<h3 class="mb-3">Grades</h3>

<div class="row g-3 mb-3">
    <div class="col-md-6">
        <label class="form-label">Course</label>
        <InputSelect class="form-select" @bind-Value="_selectedCourseId" @onchange="OnCourseChanged">
            <option value="@Guid.Empty">— Select a course —</option>
            @foreach (var c in _courses)
            {
                <option value="@c.Id">@c.Code - @c.Name</option>
            }
        </InputSelect>
    </div>
</div>

@if (!string.IsNullOrWhiteSpace(_error))
{
    <div class="alert alert-danger">@_error</div>
}
@if (!string.IsNullOrWhiteSpace(_success))
{
    <div class="alert alert-success py-2">@_success</div>
}

@if (_loading)
{
    <p>Loading...</p>
}
else if (_selectedCourseId == Guid.Empty)
{
    <p class="text-muted">Please select a course.</p>
}
else if (_rows.Count == 0)
{
    <div class="alert alert-info">No enrollments for this course.</div>
}
else
{
    <table class="table table-striped align-middle">
        <thead>
            <tr>
                <th style="width: 360px;">Student</th>
                <th style="width: 140px;">Grade (0–100)</th>
                <th style="width: 180px;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var r in _rows)
            {
                <tr>
                    <td>@StudentLabel(r.StudentId)</td>
                    <td style="max-width:140px;">
                        <InputNumber class="form-control"
                                     @bind-Value="r.Score"
                                     disabled="@(!_canEdit)" />
                    </td>
                    <td class="text-nowrap">
                        @if (_canEdit)
                        {
                            <button class="btn btn-sm btn-secondary" @onclick="() => ResetRow(r)">Reset</button>
                            <button class="btn btn-sm btn-primary ms-2"
                                    @onclick="() => SaveRowAsync(r)"
                                    disabled="@_saving">
                                @(_saving && _savingRowId == r.EnrollmentId ? "Saving..." : "Save")
                            </button>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private bool _canCreate, _canEdit, _canDelete;

    private List<CourseDto> _courses = new();
    private Guid _selectedCourseId = Guid.Empty;

    private bool _loading;
    private string _error = string.Empty;
    private string _success = string.Empty;

    private bool _saving = false;
    private Guid _savingRowId = Guid.Empty;

    private List<GradeRowVm> _rows = new();
    private List<StudentDto> _students = new();
    private List<EnrollmentDto> _enrollmentsForCourse = new();

    protected override async Task OnInitializedAsync()
    {
        await CheckPermissionsAsync();
        await LoadCoursesAsync();
        await LoadStudentsAsync();
    }

    private async Task CheckPermissionsAsync()
    {
        _canCreate = await AuthorizationService.IsGrantedAsync(AutomationPermissions.Grades.Create);
        _canEdit = await AuthorizationService.IsGrantedAsync(AutomationPermissions.Grades.Edit);
        _canDelete = await AuthorizationService.IsGrantedAsync(AutomationPermissions.Grades.Delete);
    }

    private async Task LoadCoursesAsync()
    {
        var list = await CoursesApp.GetListAsync(new PagedAndSortedResultRequestDto
        {
            MaxResultCount = 1000,
            Sorting = nameof(CourseDto.Code) + " ASC"
        });
        _courses = list.Items.ToList();
    }

    private async Task LoadStudentsAsync()
    {
        var list = await StudentsApp.GetListAsync(new PagedAndSortedResultRequestDto
        {
            MaxResultCount = 1000,
            Sorting = nameof(StudentDto.FirstName) + " ASC"
        });
        _students = list.Items.ToList();
    }

    private string StudentLabel(Guid id)
    {
        var s = _students.FirstOrDefault(x => x.Id == id);
        if (s is null) return "—";
        var no = string.IsNullOrWhiteSpace(s.StudentNo) ? "" : $" [{s.StudentNo}]";
        return $"{s.FirstName} {s.LastName}{no}";
    }

    private async Task OnCourseChanged(ChangeEventArgs _)
    {
        _error = string.Empty;
        _success = string.Empty;
        _rows.Clear();

        if (_selectedCourseId == Guid.Empty)
        {
            StateHasChanged();
            return;
        }

        await LoadGridAsync();
    }

    private async Task LoadGridAsync()
    {
        try
        {
            _loading = true;

            // 1) bu derse kayıtlı öğrenciler (enrollments)
            var enrollments = await EnrollmentsApp.GetListAsync(new PagedAndSortedResultRequestDto
            {
                MaxResultCount = 1000
            });

            _enrollmentsForCourse = enrollments.Items
                .Where(e => e.CourseId == _selectedCourseId)
                .ToList();

            // 2) bu dersin notları (yeni endpoint)
            var grades = await GradesApp.GetListByCourseAsync(_selectedCourseId);
            var gradeDict = grades.ToDictionary(g => g.EnrollmentId, g => g);

            // 3) tabloyu doldur
            _rows = _enrollmentsForCourse.Select(e =>
            {
                gradeDict.TryGetValue(e.Id, out var g);
                return new GradeRowVm
                {
                    EnrollmentId = e.Id,
                    StudentId = e.StudentId,
                    Score = g?.Score ?? 0
                };
            }).ToList();
        }
        catch (Exception ex)
        {
            _error = ex.Message;
        }
        finally
        {
            _loading = false;
        }
    }

    private void ResetRow(GradeRowVm r)
    {
        r.Score = 0;
        _success = string.Empty;
    }

    private async Task SaveRowAsync(GradeRowVm r)
    {
        if (!_canEdit)
            return;

        _saving = true;
        _savingRowId = r.EnrollmentId;
        _error = string.Empty;
        _success = string.Empty;

        try
        {
            var dto = new UpsertGradeDto
            {
                EnrollmentId = r.EnrollmentId,
                Score = r.Score,
                Note = string.Empty
            };

            await GradesApp.UpsertAsync(dto);

            _success = "Grade saved.";
        }
        catch (Exception ex)
        {
            _error = ex.Message;
        }
        finally
        {
            _saving = false;
            _savingRowId = Guid.Empty;
        }
    }

    private class GradeRowVm
    {
        public Guid EnrollmentId { get; set; }
        public Guid StudentId { get; set; }
        public int Score { get; set; }
    }
}
