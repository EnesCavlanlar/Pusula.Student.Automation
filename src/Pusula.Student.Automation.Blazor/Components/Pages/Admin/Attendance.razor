@page "/admin/attendance"

@using Pusula.Student.Automation.Permissions
@attribute [Authorize(AutomationPermissions.Attendances.Default)]

@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.WebUtilities
@using Pusula.Student.Automation.Courses
@using Pusula.Student.Automation.Enrollments
@using Pusula.Student.Automation.Students
@using Pusula.Student.Automation.Attendances
@using Pusula.Student.Automation.Attendances.Dtos
@using Volo.Abp.Application.Dtos

@inject ICourseAppService CoursesApp
@inject IEnrollmentAppService EnrollmentsApp
@inject IStudentAppService StudentsApp
@inject IAttendanceAppService AttendanceApp
@inject IAuthorizationService AuthorizationService
@inject NavigationManager Nav

<h3 class="mb-3">Attendance</h3>

<div class="row g-3 mb-3">
    <div class="col-md-6">
        <label class="form-label">Course</label>
        <InputSelect class="form-select" @bind-Value="_selectedCourseId" @onchange="OnCourseChanged">
            <option value="@Guid.Empty">— Select a course —</option>
            @foreach (var c in _courses)
            {
                <option value="@c.Id">@c.Code - @c.Name</option>
            }
        </InputSelect>
    </div>
    <div class="col-md-3">
        <label class="form-label">Date</label>
        <InputDate class="form-control" @bind-Value="_date" />
    </div>
    <div class="col-md-3 d-flex align-items-end">
        <button class="btn btn-outline-primary w-100"
                @onclick="LoadGridAsync"
                disabled="@(_selectedCourseId == Guid.Empty)">
            Load
        </button>
    </div>
</div>

@if (!string.IsNullOrWhiteSpace(_error))
{
    <div class="alert alert-danger">@_error</div>
}

@if (!string.IsNullOrWhiteSpace(_success))
{
    <div class="alert alert-success py-2">@_success</div>
}

@if (_loading)
{
    <p>Loading...</p>
}
else if (_selectedCourseId == Guid.Empty)
{
    <p class="text-muted">Please select a course.</p>
}
else if (_rows.Count == 0)
{
    <div class="alert alert-info">No enrollments for this course.</div>
}
else
{
    <div class="d-flex gap-2 mb-2">
        @if (_canEdit)
        {
            <button class="btn btn-sm btn-success" @onclick="CheckAll">Mark all present</button>
            <button class="btn btn-sm btn-secondary" @onclick="UncheckAll">Clear all</button>
            <button class="btn btn-sm btn-primary ms-auto" @onclick="SaveAsync" disabled="@_saving">
                @(_saving ? "Saving..." : "Save")
            </button>
        }
    </div>

    <table class="table table-striped align-middle">
        <thead>
            <tr>
                <th>Student</th>
                <th style="width:140px;">Present</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var r in _rows)
            {
                <tr>
                    <td>@StudentLabel(r.StudentId)</td>
                    <td>
                        <input class="form-check-input" type="checkbox" @bind="r.Present" disabled="@(!_canEdit)" />
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private bool _canCreate, _canEdit, _canDelete;

    private List<CourseDto> _courses = new();
    private Guid _selectedCourseId = Guid.Empty;

    private DateTime _date = DateTime.Today;
    private bool _loading;
    private bool _saving;
    private string _error = string.Empty;
    private string _success = string.Empty;

    private List<RowVm> _rows = new();
    private List<StudentDto> _students = new();
    private List<EnrollmentDto> _enrollmentsForCourse = new();

    protected override async Task OnInitializedAsync()
    {
        await CheckPermissionsAsync();
        await LoadCoursesAsync();
        await LoadStudentsAsync();

        // ---- query param oku (teacher'dan geldiğinde) ----
        var uri = new Uri(Nav.Uri);
        var q = QueryHelpers.ParseQuery(uri.Query);

        if (q.TryGetValue("courseId", out var courseVal))
        {
            if (Guid.TryParse(courseVal!, out var cid))
            {
                _selectedCourseId = cid;
            }
        }

        if (q.TryGetValue("date", out var dateVal))
        {
            if (DateTime.TryParse(dateVal!, out var d))
            {
                _date = d.Date;
            }
        }

        // eğer query ile kurs geldiyse direkt yükle
        if (_selectedCourseId != Guid.Empty)
        {
            await LoadGridAsync();
        }
    }

    private async Task CheckPermissionsAsync()
    {
        _canCreate = await AuthorizationService.IsGrantedAsync(AutomationPermissions.Attendances.Create);
        _canEdit = await AuthorizationService.IsGrantedAsync(AutomationPermissions.Attendances.Edit);
        _canDelete = await AuthorizationService.IsGrantedAsync(AutomationPermissions.Attendances.Delete);
    }

    private async Task LoadCoursesAsync()
    {
        var list = await CoursesApp.GetListAsync(new PagedAndSortedResultRequestDto
        {
            MaxResultCount = 1000,
            Sorting = nameof(CourseDto.Code) + " ASC"
        });
        _courses = list.Items.ToList();
    }

    private async Task LoadStudentsAsync()
    {
        var list = await StudentsApp.GetListAsync(new PagedAndSortedResultRequestDto
        {
            MaxResultCount = 1000,
            Sorting = nameof(StudentDto.FirstName) + " ASC"
        });
        _students = list.Items.ToList();
    }

    private string StudentLabel(Guid id)
    {
        var s = _students.FirstOrDefault(x => x.Id == id);
        if (s is null) return "—";
        var no = string.IsNullOrWhiteSpace(s.StudentNo) ? "" : $" [{s.StudentNo}]";
        return $"{s.FirstName} {s.LastName}{no}";
    }

    private async Task OnCourseChanged(ChangeEventArgs _)
    {
        _error = string.Empty;
        _success = string.Empty;
        _rows.Clear();

        if (_selectedCourseId == Guid.Empty)
        {
            StateHasChanged();
            return;
        }
        await LoadGridAsync();
    }

    private async Task LoadGridAsync()
    {
        try
        {
            _loading = true;
            _error = string.Empty;
            _success = string.Empty;

            // 1) bu kursun enrollments
            var enrolls = await EnrollmentsApp.GetListAsync(new PagedAndSortedResultRequestDto
            {
                MaxResultCount = 1000
            });

            _enrollmentsForCourse = enrolls.Items
                .Where(e => e.CourseId == _selectedCourseId)
                .ToList();

            // 2) bu kurs + bu tarih için mevcut attendance kayıtları
            // senin AttendanceAppService'te yazdığımız ekstra metodun adı neyse onu kullan
            var attendanceForDay = await AttendanceApp.GetListByCourseAndDateAsync(_selectedCourseId, _date.Date);
            var attDict = attendanceForDay.ToDictionary(a => a.EnrollmentId, a => a);

            // 3) grid
            _rows = _enrollmentsForCourse.Select(e =>
            {
                attDict.TryGetValue(e.Id, out var a);
                return new RowVm
                {
                    EnrollmentId = e.Id,
                    StudentId = e.StudentId,
                    Present = a?.IsPresent ?? false
                };
            }).ToList();
        }
        catch (Exception ex)
        {
            _error = ex.Message;
        }
        finally
        {
            _loading = false;
        }
    }

    private async Task SaveAsync()
    {
        if (!_canEdit)
            return;

        _saving = true;
        _error = string.Empty;
        _success = string.Empty;

        try
        {
            foreach (var r in _rows)
            {
                var dto = new UpsertAttendanceDto
                {
                    EnrollmentId = r.EnrollmentId,
                    Date = _date.Date,
                    IsPresent = r.Present
                };

                await AttendanceApp.UpsertAsync(dto);
            }

            _success = "Attendance saved.";
        }
        catch (Exception ex)
        {
            _error = ex.Message;
        }
        finally
        {
            _saving = false;
        }
    }

    private void CheckAll() => _rows.ForEach(r => r.Present = true);
    private void UncheckAll() => _rows.ForEach(r => r.Present = false);

    private class RowVm
    {
        public Guid EnrollmentId { get; set; }
        public Guid StudentId { get; set; }
        public bool Present { get; set; }
    }
}
